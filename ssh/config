# You may also want to add this in your ~/.ssh/config:
#
# Host *.tocco.cust.vshn.net
#    User first_name.last_name  ### !!! REPLACE !!!

Host juventus.tocco.ch juventustest.tocco.ch
    User tocco

Host sfb.tocco.ch
    User tocco
    Port 4446

Host sfbtest.tocco.ch
    User tocco
    Port 4442

Host sfbv.tocco.ch
    User tocco
    Port 4450

Host zb.tocco.ch zbtest.tocco.ch
    User tocco
    Port 2222

Host *.tocco.ch
    StrictHostKeyChecking yes
    User tocco
    UserKnownHostsFile ~/.ssh/known_hosts_tocco

# uncomment in case git.tocco.ch is down
#
# Match host "*.tocco.ch,!backup02.tocco.ch" exec "getent ahosts backup02.tocco.ch |grep -qv '^10\.'"
#     ProxyJump backup02.tocco.ch:32711

# only use jump host if git.tocco.ch isn't in the local network
Match host "*.tocco.ch,!git.tocco.ch" exec "getent ahosts git.tocco.ch |grep -qv '^10\.'"
    ProxyJump git.tocco.ch

Host *.tocco.cust.vshn.net
    StrictHostKeyChecking yes
    UserKnownHostsFile ~/.ssh/known_hosts_tocco

Host *
    # new in OpenSSH 7.2
    IgnoreUnknown AddKeysToAgent
    AddKeysToAgent yes

    # allow skipping .tocco.ch
    CanonicalDomains tocco.ch
    CanonicalizeHostname yes
    CanonicalizeFallbackLocal no
    CanonicalizeMaxDots 0
